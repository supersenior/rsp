/*-----------  Fonts  -----------*/

$fontFamily      : 'Open Sans', Open Sans, sans-serif
$fontWeight      : 400
$fontWeightLight : 300
$fontWeightBold  : 600

/*-----------  Body Font Mixin  -----------*/

@mixin body-font($italic: false)
  font-family: $fontFamily
  font-weight: $fontWeightLight

  @if $italic
    font-style: italic
  @else
    font-style: normal

/*-----------  Weight Corrections  -----------*/

@mixin antialiased($smooth: true)
  @if $smooth
    @include prefixer(font-smoothing, antialiased, webkit moz ms o spec)
  @else
    @include prefixer(font-smoothing, subpixel-antialiased, webkit moz ms o spec)

/*-----------  Icon Mixin  -----------*/

@mixin use-icon($content: '')
  content: $content
  font-family: 'watchtower'
  @include transition()

/*-----------  Icon Fonts  -----------*/

@font-face
  font-family: 'watchtower'
  src: url(<%= asset_path "watchtower.eot" %>)
  src: url(<%= asset_path "watchtower.eot?#iefix" %>) format('embedded-opentype'), url(<%= asset_path "watchtower.woff" %>) format('woff'), url(<%= asset_path "watchtower.ttf" %>) format('truetype'), url(<%= asset_path "watchtower.svg#watchtower" %>) format('svg')
  font-weight: normal
  font-style: normal

[data-icon]:before
  speak: none
  line-height: 1
  content: attr(data-icon)
  font-style: normal !important
  font-weight: normal !important
  font-variant: normal !important
  text-transform: none !important
  font-family: 'watchtower' !important
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

[class^='icon-']:before, [class*=' icon-']:before
  speak: none
  line-height: 1
  font-style: normal !important
  font-weight: normal !important
  font-variant: normal !important
  text-transform: none !important
  font-family: 'watchtower' !important
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

